{
    "kind": "collectionType",
    "collectionName": "events",
    "info": {
        "singularName": "event",
        "pluralName": "events",
        "displayName": "Event",
        "description": "SCEAR events - Roman reenactment activities"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "maxLength": 255
        },
        "description": {
            "type": "richtext",
            "required": true
        },
        "startDate": {
            "type": "datetime",
            "required": true
        },
        "endDate": {
            "type": "datetime",
            "required": true
        },
        "locationName": {
            "type": "string",
            "required": true,
            "maxLength": 200
        },
        "locationAddress": {
            "type": "text",
            "required": false
        },
        "coordinates": {
            "type": "json",
            "required": false
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": ["images"]
        },
        "category": {
            "type": "enumeration",
            "enum": ["reenactment", "training", "exhibition", "workshop", "meeting"],
            "required": true,
            "default": "training"
        },
        "attendees": {
            "type": "integer",
            "required": false,
            "min": 0,
            "default": 0
        },
        "recurring": {
            "type": "boolean",
            "default": false
        },
        "visible": {
            "type": "boolean",
            "default": true
        },
        "featured": {
            "type": "boolean",
            "default": false
        }
    }
}
