{
    "kind": "collectionType",
    "collectionName": "gallery_items",
    "info": {
        "singularName": "gallery-item",
        "pluralName": "gallery-items",
        "displayName": "Gallery Item",
        "description": "SCEAR photo gallery - Historical reenactment photos"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "title": {
            "type": "string",
            "required": true,
            "maxLength": 255
        },
        "description": {
            "type": "text",
            "required": false
        },
        "image": {
            "type": "media",
            "multiple": false,
            "required": true,
            "allowedTypes": ["images"]
        },
        "category": {
            "type": "enumeration",
            "enum": ["event", "training", "equipment", "formation", "camp", "battle", "crafts", "other"],
            "required": true,
            "default": "event"
        },
        "eventDate": {
            "type": "date",
            "required": false
        },
        "location": {
            "type": "string",
            "required": false,
            "maxLength": 200
        },
        "photographer": {
            "type": "string",
            "required": false,
            "maxLength": 100
        },
        "featured": {
            "type": "boolean",
            "default": false
        },
        "visible": {
            "type": "boolean",
            "default": true
        },
        "tags": {
            "type": "json",
            "required": false
        },
        "orientation": {
            "type": "enumeration",
            "enum": ["vertical", "horizontal"],
            "required": false,
            "default": "horizontal"
        }
    }
}
