{
  "kind": "collectionType",
  "collectionName": "activities",
  "info": {
    "singularName": "activity",
    "pluralName": "activities",
    "displayName": "Activity",
    "description": "S.C.E.A.R. regular activities and training sessions"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "eventDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime"
    },
    "location": {
      "type": "string",
      "required": true
    },
    "coordinates": {
      "type": "component",
      "repeatable": false,
      "component": "location.coordinates"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Týždenný tréning",
        "Stretnutie na Devíne", 
        "Workshop",
        "Príprava výstroja",
        "Stretnutie skupiny",
        "Špeciálny tréning"
      ],
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    }
  }
}