{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "singularName": "event",
    "pluralName": "events",
    "displayName": "Event",
    "description": "Roman reenactment events and activities"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "description": {
      "type": "text",
      "required": true
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "locationName": {
      "type": "string",
      "required": true
    },
    "locationAddress": {
      "type": "string",
      "required": true
    },
    "coordinates": {
      "type": "component",
      "repeatable": false,
      "component": "location.coordinates"
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "reenactment",
        "training", 
        "exhibition",
        "workshop",
        "meeting"
      ],
      "required": true,
      "default": "reenactment"
    },
    "recurring": {
      "type": "boolean",
      "default": false
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    }
  }
}