{
  "kind": "collectionType",
  "collectionName": "history_articles",
  "info": {
    "singularName": "history-article",
    "pluralName": "history-articles",
    "displayName": "History Article",
    "description": "Rich content articles with blocks editor support"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "title_sk": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "title_en": {
      "type": "string",
      "maxLength": 255
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "slug_en": {
      "type": "uid",
      "targetField": "title_en"
    },
    "subtitle": {
      "type": "text",
      "maxLength": 500
    },
    "subtitle_sk": {
      "type": "text",
      "maxLength": 500
    },
    "subtitle_en": {
      "type": "text",
      "maxLength": 500
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "auxiliary-forces",
        "legion-history",
        "equipment",
        "tactics",
        "culture",
        "archaeology"
      ],
      "required": true,
      "default": "legion-history"
    },
    "publishedDate": {
      "type": "date",
      "required": true
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "published", "archived"],
      "default": "draft"
    },
    "heroImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "heroImageFocalPoint": {
      "type": "json",
      "default": {
        "x": 50,
        "y": 50
      }
    },
    "heroTitle": {
      "type": "string",
      "maxLength": 255
    },
    "heroTitle_sk": {
      "type": "string",
      "maxLength": 255
    },
    "heroTitle_en": {
      "type": "string",
      "maxLength": 255
    },
    "heroDescription": {
      "type": "text",
      "maxLength": 500
    },
    "heroDescription_sk": {
      "type": "text",
      "maxLength": 500
    },
    "heroDescription_en": {
      "type": "text",
      "maxLength": 500
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "mainImageFocalPoint": {
      "type": "json",
      "default": {
        "x": 50,
        "y": 50
      }
    },
    "mainImageCaption": {
      "type": "string",
      "maxLength": 255
    },
    "mainImageDescription": {
      "type": "text",
      "maxLength": 500
    },
    "mainContent": {
      "type": "blocks",
      "required": true
    },
    "mainContent_sk": {
      "type": "blocks",
      "required": true
    },
    "mainContent_en": {
      "type": "blocks"
    },
    "contentImages": {
      "type": "component",
      "repeatable": true,
      "component": "content.content-image"
    },
    "sidebarComponents": {
      "type": "dynamiczone",
      "components": [
        "sidebar.key-facts",
        "sidebar.timeline",
        "sidebar.unit-types",
        "sidebar.related-articles"
      ]
    },
    "seoTitle": {
      "type": "string",
      "maxLength": 60
    },
    "seoTitle_sk": {
      "type": "string",
      "maxLength": 60
    },
    "seoTitle_en": {
      "type": "string",
      "maxLength": 60
    },
    "seoDescription": {
      "type": "text",
      "maxLength": 160
    },
    "seoDescription_sk": {
      "type": "text",
      "maxLength": 160
    },
    "seoDescription_en": {
      "type": "text",
      "maxLength": 160
    },
    "seoImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "keywords": {
      "type": "json"
    },
    "author": {
      "type": "string",
      "maxLength": 255
    },
    "readingTime": {
      "type": "integer",
      "min": 1
    },
    "sortOrder": {
      "type": "integer",
      "default": 0
    }
  }
}
