{
  "kind": "collectionType",
  "collectionName": "history_articles",
  "info": {
    "singularName": "history-article",
    "pluralName": "history-articles",
    "displayName": "History Article",
    "description": "SCEAR historical articles about Roman auxiliary forces"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 255
    },
    "subtitle": {
      "type": "string",
      "required": false,
      "maxLength": 300
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "excerpt": {
      "type": "text",
      "required": false,
      "maxLength": 500
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "enumeration",
      "enum": ["auxiliary-forces", "equipment", "tactics", "history", "archaeology", "sources"],
      "required": true,
      "default": "auxiliary-forces"
    },
    "author": {
      "type": "string",
      "required": true,
      "maxLength": 100,
      "default": "SCEAR"
    },
    "readingTime": {
      "type": "integer",
      "required": false,
      "min": 1,
      "default": 5
    },
    "featured": {
      "type": "boolean",
      "default": false
    },
    "visible": {
      "type": "boolean",
      "default": true
    },
    "tags": {
      "type": "json",
      "required": false
    },
    "sources": {
      "type": "json",
      "required": false
    }
  }
}